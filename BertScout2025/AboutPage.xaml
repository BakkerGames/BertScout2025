<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BertScout2025.AboutPage"
    x:DataType="ContentPage"
    x:Name="cpAbout"
    Title="About"
    BackgroundColor="{AppThemeBinding Light=White, Dark=#003300}"
    >

    <VerticalStackLayout
        VerticalOptions="FillAndExpand">

        <Label
            x:Name="LabelAboutVersion"
            Text="Version: 2025.2.26.0"
            FontSize="{OnPlatform WinUI=Small, Android=Medium}"
            HorizontalOptions="Center"
            Margin="0,20,0,0"
            />

        <Label
            x:Name="LabelAboutDatabase"
            Text="DatabasePath"
            FontSize="{OnPlatform WinUI=Small, Android=Medium}"
            HorizontalOptions="Center"
            />

        <Label
            x:Name="LabelAboutWrittenBy"
            Text="Written by: Evan, Paul, Nate, and Scott"
            FontSize="{OnPlatform WinUI=Small, Android=Medium}"
            HorizontalOptions="Center"
            />

    </VerticalStackLayout>

</ContentPage>